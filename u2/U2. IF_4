Algoritmo rendimientovenderores
	
	
	escribir"introducir primera venta del mes: " 
	leer ventaP
	
	escribir"introducir segunda venta del mes:"
	leer ventaS
	
	escribir "introducir venta tercera del mes:"
	leer ventaT
	
	escribir "introducir venta cuarta del mes:"
	leer ventaC
	
	si ventaP > ventaS y ventaP>ventaT y ventaP>ventaC entonces 
		escribir "venta primera es mayor"
		p1=ventaP
	FinSi
	
	si ventaS >ventaP Y ventaS >ventaT y ventaS>ventaC entonces 
		p1=ventaS
		escribir "venta segunda es mayor"
	FinSi
	
	si ventaT>ventaP Y ventaT>ventaS y ventaT>ventaC entonces 
		p1=ventaT
		escribir"venta tercera es mayor"
		
	FinSi
	si ventaC>ventaP y ventaC>ventaT y ventaC>ventaS entonces 
		p1=ventaC
		escribir "venta cuarta es mayor"
	finsi 
	

	//RESULTADO
	Mostrar "El primero es ", ventaP, ", el segundo es ", ventaS, ", el tercero es ", ventaT ", el numero 4 es ", ventaC
	
	res1 <- rendimiento4 - rendimiento1
